generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model Transaction {
  created_at       DateTime @default(now()) @db.Timestamptz(6)
  description      String
  transaction_date DateTime @db.Date
  id               String   @id @db.Uuid
  group            String?
  group_id         Decimal? @db.Decimal
  amount           Decimal? @db.Decimal
}

model Balance {
  id                     String   @id @db.Uuid
  created_at             DateTime @default(now()) @db.Timestamptz(6)
  bmo_chequing_1         Decimal? @db.Decimal
  bmo_chequing_2         Decimal? @db.Decimal
  bmo_mastercard         Decimal? @db.Decimal
  questrade_tfsa         Decimal? @db.Decimal
  questrade_rrsp         Decimal? @db.Decimal
  questrade_lrsp         Decimal? @db.Decimal
  questrade_fhsa         Decimal? @db.Decimal
  scotiabank_chequing    Decimal? @db.Decimal
  scotiabank_savings     Decimal? @db.Decimal
  scotiabank_visa        Decimal? @db.Decimal
  pcfinancial_mastercard Decimal? @db.Decimal
  total                  Decimal? @db.Decimal
}
